<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical" >    <EditText        android:id="@+id/createTeamEditText"        android:layout_marginLeft="2dip"        android:layout_marginRight="2dip"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:ems="10"        android:hint="Team Name"        android:maxLength="12" >        <requestFocus />    </EditText>    <CheckBox        android:id="@+id/joinTeamCheckBox"        android:layout_marginLeft="2dip"        android:layout_width="wrap_content"        android:textColor="#7090c8"        android:layout_height="wrap_content"        android:text="Join this new team" /></LinearLayout>